{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/components/Datatable/Datatable.js",
    "src/plugins/vue-loading-overlay.js",
    "src/store/modules/user.ts",
    "src/views/Layout/Navbar/Navbar.ts", "src/Utils/ConfigProvider.ts", "src/store/core/storePromises.js", "src/store/core/storeMutations.js"
  ],
  "exclude": [
    "node_modules"
  ]
}